<%= simple_form_for(@plan) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :events_number %>
    <%= f.input :trial_period %>
    <%= f.input :monthly_cost_cents %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
