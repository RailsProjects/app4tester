 <br/>
 <br/>
 <div class="container">
          
       <!--SILVER-->
        <div class="fltlft PlanBoxGold">
          <div class="PlanBoxHeading">SILVER PLAN</div>
          <div class="PlanBoxContent">
            <ul>
              <li><strong>$35 Monthly</strong></li>
              <li>25 Events / Year</li>
              <li>Unlimited Name Recordings </li>
              <li>Free 14 Day Trial</li>
              <li>
                <p class="PlanBoxSignUp"><%= form_for(:snc, url: newcustomer_path) do |y| %>
                <%= y.hidden_field :plan, :value => 'silver' %>
                  <%= y.submit "Start Free Trial!", class: "btn-primary btn-large" %>
                <% end %>  </p>
              </li>
            </ul>
          </div>
        </div>

        <!--Gold-->
        <div class="fltlft PlanBoxGold">
          <div class="PlanBoxHeading">GOLD PLAN</div>
          <div class="PlanBoxContent">
            <ul>
              <li><strong>$55 Monthly</strong></li>
              <li>50 Events / Year</li>
              <li>Unlimited Name Recordings</li>
              <li>Free 14 Day Trial</li>
              <li>
                <p class="PlanBoxSignUp">  <%= form_for(:snc, url: newcustomer_path) do |y| %>
                  <%= y.hidden_field :plan, :value => 'gold' %>
                  <%= y.submit "Start Free Trial!", class: "btn-primary btn-large" %>
                <% end %>  </p>
              </li>
            </ul>
          </div>
        </div>
        
        <!--Platinum-->
        <div class="fltlft PlanBoxGold">
          <div class="PlanBoxHeading">PLATINUM PLAN</div>
          <div class="PlanBoxContent">
            <ul>
              <li><strong>$85 Monthly</strong></li>
              <li>100 Events/ Year</li>
              <li>Unlimited Name Recordings</li>
              <li>Free 14 Day Trial</li>
              <li>
                <p class="PlanBoxSignUp"> <%= form_for(:snc, url: newcustomer_path) do |y| %>
                  <%= y.hidden_field :plan, :value => 'platinum' %>
                  <%= y.submit "Start Free Trial!", class: "btn-primary btn-large" %>
                <% end %>  </p>
              </li>
            </ul>
          </div>
        </div>
        
      
        
        <!--Buy Pages-->
        <div class="fl-right PlanBox3">
          <div class="PlanBoxHeading">EVENT PAGE PRICING</div>
          <div class="PlanBoxContent">
            <ul>
              <li>If you plan a lower volume of events, you can pay <strong>by-the-event</strong> rather than subscribe to a plan:</li>
              <li><strong>1 to 5</strong> Events: <strong>$35 / Event</strong></li>
              <li><strong>6 to 10</strong> Events: <strong>$30 / Event</strong></li>
              <li><strong>10+</strong> Events: <strong>$25 / Event</strong></li>
              <li>
                Select number of events:
                <%= form_for(:pnc, url: newcustomer_purchase_path) do |y| %>
                  <%= y.select :number, (1..24) %>
                  <%= y.submit "Purchase", class: "btn-primary btn-large" %>
                <% end %>  
              </li>
            </ul>
          </div>
          </div>
    

</div>