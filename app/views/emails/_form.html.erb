<%= simple_form_for(@email) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :recipient_email %>
    <%= f.input :from_email %>
    <%= f.input :subject %>
    <%= f.input :body %>
    <%= f.input :sent_at %>
    <%= f.input :cc_email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
